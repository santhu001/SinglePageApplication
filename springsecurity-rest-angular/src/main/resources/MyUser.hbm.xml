<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.springsecurity.model.MyUser" table="KHUB_USER">

        <id name="id" type="java.lang.Long" column="ID" >
            <generator class="native"/>
        </id>


        <property name="emailAddress" type="string" not-null="true" column="EMAIL_ADDRESS"/>
        <property name="name" type="string" column="NAME"/>

        <property name="password" type="string" not-null="true" column="PASSWORD"/>
        <property name="phone" type="string"  column="PHONE"/>
        <property name="company" type="string"  column="COMPANY"/>
        <property name="country" type="string" column="COUNTRY"/>

    </class>



</hibernate-mapping>